@model MenuViewModel
<form method="post">
    <p>Sei sicuro di voler eliminare questo prodotto: @Model.Id - @Model.Nome?</p>

    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" readonly />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <input type="submit" value="Conferma" class="tbn btn-danger" />
    <a class="btn btn-primary" asp-controller="Menu" asp-action="Index" role="button">Annulla</a>
</form>