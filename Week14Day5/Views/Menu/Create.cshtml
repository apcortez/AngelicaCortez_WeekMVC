@model MenuViewModel
<h1>Inserisci nuovo menu: </h1>

<form method="post">
    <div class="form-group">
        <input type="hidden" asp-for="Id" class="form-control" value="0" />
    </div>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    
    <input type="submit" value="Salva" class="btn btn-secondary" />
    <input type="reset" value="Reset" class="btn btn-secondary" />
    <a class="btn btn-secondary" asp-controller="Prodotti" asp-action="Index" role="button">Indietro</a>
</form>
